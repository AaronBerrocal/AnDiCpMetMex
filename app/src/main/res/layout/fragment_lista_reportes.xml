<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.guardiaeventos.ListaReportes">

    <TextView
        android:id="@+id/text_guard_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:text="INFORMACIÓN DE GUARDIA DE CONTROL DE PROCESOS"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="@color/colorSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_phone_info"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/ll_phone_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_guard_info"
        app:layout_constraintBottom_toTopOf="@id/ll_email_info">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="No. Teléfono :"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:layout_weight="0.3"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+(52) 55-5432-8765"
            android:textAlignment="center"
            android:autoLink="phone"
            android:layout_weight="0.7"
            android:padding="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_phone_info"
        app:layout_constraintBottom_toTopOf="@id/text_report_info">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="E-mail:"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:layout_weight="0.3"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="guardia.cp@gmail.com"
            android:textAlignment="center"
            android:autoLink="email"
            android:layout_weight="0.7"
            android:padding="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_report_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:text="REPORTE DE EVENTOS"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="@color/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/ll_email_info"
        app:layout_constraintBottom_toTopOf="@id/btn_event_report"
        android:padding="8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_event_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_type_a"
        android:text="Reportar Evento"
        android:textColor="@color/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/text_report_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_report_history"
        android:padding="8dp"
        android:layout_margin="10dp">

    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:id="@+id/ll_report_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/side_nav_bar"
        app:layout_constraintTop_toBottomOf="@id/btn_event_report"
        app:layout_constraintBottom_toTopOf="@id/rv_report_history"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/text_report_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="HISTORICO DE REPORTES"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            android:padding="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_filter_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.2"
            android:background="@drawable/border_type_c"
            android:text="Filtrar"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/card_small_size_font" >

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_report_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_report_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_lista_reportes">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>